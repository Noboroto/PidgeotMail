<?xml version="1.0" encoding="utf-8"?>
<configuration>	
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<log4net>
		<root>
			<level value="ALL" />
			<appender-ref ref="fileINFO" />
			<appender-ref ref="fileERROR" />
		</root>
		<appender name="fileERROR" type="log4net.Appender.RollingFileAppender">
			<file value="logs\PidgeotMailERROR.log" />
			<encoding value="utf-8" />
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="ERROR" />
				<levelMax value="FATAL" />
			</filter>
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="1" />
			<datePattern value="yyyyMMdd" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %level %logger - %message FROM: %stacktracedetail{20}%newline" />
			</layout>
		</appender>
		<appender name="fileINFO" type="log4net.Appender.RollingFileAppender">
			<file value="logs\PidgeotMailINFO.log" />
			<encoding value="utf-8" />
			<filter type="log4net.Filter.LevelRangeFilter">
				<levelMin value="INFO" />
				<levelMax value="INFO" />
			</filter>
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="1" />
			<datePattern value="yyyyMMdd" />
			<maximumFileSize value="10MB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %level %logger - %message%newline" />
			</layout>
		</appender>
	</log4net>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6" />
	</startup>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<probing privatePath="lib;libs" />
			<dependentAssembly>
				<assemblyIdentity name="CommonServiceLocator" publicKeyToken="489b6accfaf20ef0" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-2.0.6.0" newVersion="2.0.6.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="BouncyCastle.Crypto" publicKeyToken="0e99375e54769942" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-1.8.10.0" newVersion="1.8.10.0" />
			</dependentAssembly>
		</assemblyBinding>
	</runtime>

</configuration>